@if (Info != null)
{
    <em>@Title: </em>
    @if (InfoOnNewLine)
    {
        <br/>
    }
    @(Info)
    <br />
}



@code {

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string? Info { get; set; }

    [Parameter]
    public bool InfoOnNewLine { get; set; } = false;
}

