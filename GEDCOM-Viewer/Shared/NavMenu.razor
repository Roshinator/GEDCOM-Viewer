<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">GEDCOM Viewer</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="all-people">
                <span class="oi oi-people" aria-hidden="true"></span> All People
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="view-person">
                <span class="oi oi-person" aria-hidden="true"></span> View Person
            </NavLink>
        </div>
    </nav>
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="about">
                <span class="oi oi-info" aria-hidden="true"></span> About
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <a class="nav-link" href="https://github.com/Roshinator/gedcom-viewer" target="_blank">
                <span class="oi oi-code" aria-hidden="true"></span> GitHub Source
            </a>
        </div>
        <div class="nav-item px-3">
            <a class="nav-link" href="https://roshinator.com" target="_blank">
                <span class="oi oi-external-link" aria-hidden="true"></span> My Other Projects
            </a>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
